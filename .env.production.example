# ================================
# PRODUCTION ENVIRONMENT VARIABLES
# ================================
# Copy this file to .env and fill in your production values
# NEVER commit this file to Git
# Keep all secrets secure and unique for production

# ================================
# SERVER CONFIGURATION
# ================================
PORT=5002
NODE_ENV=production
HOST=0.0.0.0

# ================================
# FRONTEND CONFIGURATION
# ================================
VITE_API_URL=https://your-domain.com/api
CLIENT_URL=https://your-domain.com
VITE_ENV=production

# ================================
# DATABASE CONFIGURATION
# ================================
# Use MongoDB Atlas for production (free tier available)
# Format: mongodb+srv://username:password@cluster.mongodb.net/dbname
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/golden-creative-hub?retryWrites=true&w=majority
DB_NAME=golden-creative-hub
DB_HOST=cluster0.xxxxx.mongodb.net
DB_PORT=27017

# ================================
# AUTHENTICATION & SECURITY
# ================================
# Generate strong random secrets (min 32 characters)
JWT_SECRET=your_very_long_random_secret_key_minimum_32_characters_use_crypto_to_generate
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Social login providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://your-domain.com/api/auth/google/callback
VITE_GOOGLE_CLIENT_ID=

APPLE_CLIENT_ID=
APPLE_REDIRECT_URI=https://your-domain.com/login
APPLE_SCOPES=name email

FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_GRAPH_VERSION=v19.0

REFRESH_TOKEN_SECRET=another_very_long_random_secret_key_for_refresh_tokens_minimum_32_characters
REFRESH_TOKEN_EXPIRE=30d

# Password reset token
PASSWORD_RESET_TOKEN_EXPIRE=15m

# ================================
# EMAIL CONFIGURATION
# ================================
# Option 1: Gmail SMTP (Recommended for beginners)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=rajkayal7281@gmail.com
SMTP_PASSWORD=your_app_specific_password_not_regular_password
SMTP_FROM_NAME="RK Creative Hub"
SMTP_FROM_EMAIL=noreply@your-domain.com

# Option 2: SendGrid (Enterprise alternative)
# SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Option 3: AWS SES
# AWS_SES_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ================================
# OTP CONFIGURATION
# ================================
OTP_EXPIRY=300
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=5
OTP_RESEND_DELAY=60

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
MAX_FILE_SIZE=52428800
UPLOAD_DIR=public/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,mp4,mov,avi,docx,xlsx

# Cloud Storage (Optional - for scaling)
# AWS_S3_BUCKET=your-bucket-name
# AWS_S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_S3_URL=https://your-bucket.s3.amazonaws.com

# ================================
# PAYMENT GATEWAY (Optional)
# ================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Razorpay (if using for Indian payments)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ================================
# ADMIN CONFIGURATION
# ================================
ADMIN_EMAIL=rajkayal7281@gmail.com
ADMIN_PASSWORD_HASH=hash_of_strong_admin_password
ADMIN_PHONE=+918754616454

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com,https://admin.your-domain.com
CORS_CREDENTIALS=true

# ================================
# LOGGING & MONITORING
# ================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/your_project_id

# LogRocket Session Replay (Optional)
LOGROCKET_APP_ID=your_logrocket_app_id

# ================================
# THIRD-PARTY SERVICES
# ================================
# Google Analytics
GOOGLE_ANALYTICS_ID=G_XXXXXXXXXX

# Cloudflare (if using)
CLOUDFLARE_ZONE_ID=your_zone_id
CLOUDFLARE_API_TOKEN=your_api_token

# ================================
# REDIS CONFIGURATION (Optional - for caching)
# ================================
REDIS_URL=redis://username:password@your-redis-host:6379
REDIS_ENABLE_CACHE=true
CACHE_TTL=3600

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
REGISTRATION_RATE_LIMIT_MAX=3

# ================================
# API KEYS
# ================================
# Google Maps (if using)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Weather API (if needed)
WEATHER_API_KEY=your_weather_api_key

# ================================
# ENVIRONMENT FLAGS
# ================================
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# ================================
# SESSION CONFIGURATION
# ================================
SESSION_SECRET=your_session_secret_key_minimum_32_characters
SESSION_TIMEOUT=3600000
SESSION_SECURE_COOKIES=true

# ================================
# DOMAIN & SSL
# ================================
DOMAIN=rkch.tech
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# ================================
# BACKUP & MAINTENANCE
# ================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ================================
# SECURITY HEADERS
# ================================
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_MAX_AGE=31536000
X_FRAME_OPTIONS=DENY

# ================================
# PRODUCTION ONLY
# ================================
DEBUG=false
ALLOW_DEMO_MODE=false
SHOW_STACK_TRACE_IN_ERROR=false
ALLOW_CORS_DEVELOPMENT_TOOLS=false

# ================================
# IMPORTANT NOTES
# ================================
# 1. NEVER share this file or commit it to Git
# 2. Use different values for development and production
# 3. Rotate secrets regularly
# 4. Use strong, random values (use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# 5. Keep secrets in a secure vault (AWS Secrets Manager, HashiCorp Vault, etc.)
# 6. Enable audit logging for security events
# 7. Regularly audit access logs and error logs
# 8. Use HTTPS for all communications
# 9. Implement rate limiting on all public endpoints
# 10. Regular security updates and patches

